<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/header"
        layout="@layout/layout_translation_header" />

    <RelativeLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/header"
        android:layout_margin="@dimen/default_padding"
        android:background="@drawable/border"
        android:padding="5dp">

        <EditText
            android:id="@+id/text_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/clear_image_button"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:gravity="top"
            android:hint="Type text" />

        <ImageButton
            android:id="@id/clear_image_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:background="@null"
            android:src="@drawable/ic_delete" />
    </RelativeLayout>


    <TextView
        android:id="@+id/translation_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/input_layout"
        android:layout_alignStart="@+id/input_layout"
        android:layout_below="@+id/input_layout"
        android:layout_toLeftOf="@+id/favourite_button"
        android:layout_toStartOf="@+id/favourite_button"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Translation1"
        android:textColor="@color/toolbar_title"
        android:textSize="@dimen/dictionary_title" />

    <kz.kamadi.yandextranslate.ui.widgets.DictionaryView
        android:id="@+id/dictionary_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/translation_text_view"
        android:layout_alignLeft="@+id/translation_text_view"
        android:layout_alignRight="@+id/translation_text_view"
        android:layout_alignStart="@+id/translation_text_view"
        android:layout_below="@+id/translation_text_view"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <ImageButton
        android:id="@+id/favourite_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@id/input_layout"
        android:layout_alignRight="@id/input_layout"
        android:layout_below="@+id/input_layout"
        android:layout_marginBottom="@dimen/default_padding"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_tab_fav" />

    <ImageButton
        android:id="@+id/share_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@id/input_layout"
        android:layout_alignRight="@id/input_layout"
        android:layout_below="@+id/favourite_button"
        android:layout_marginBottom="@dimen/default_padding"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_share" />

    <ImageButton
        android:id="@+id/fullscreen_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@id/input_layout"
        android:layout_alignRight="@id/input_layout"
        android:layout_below="@+id/share_button"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_fullscreen" />
</RelativeLayout>